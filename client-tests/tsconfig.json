{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"incremental": true,
		"composite": true,
		"tsBuildInfoFile":"./lib/tsconfig.tsbuildInfo",
		"sourceMap": true,
		"declaration": true,
		"stripInternal": true,
		"target": "es2017",
		"module": "commonjs",
		"moduleResolution": "node",
		"lib": [ "es2017" ],
		"rootDir": "src",
		"outDir": "lib",
		"baseUrl": "./src",
		"paths": {
			"vscode-languageclient": ["../../client/lib/main"],
			"vscode-languageclient/*": ["../../client/lib"],
			"vscode-languageserver": ["../../server/lib/main"],
			"vscode-languageserver/*": ["../../server/lib"]
		}
	},
	"references": [
		{ "path": "../protocol/tsconfig.json" },
		{ "path": "../client/tsconfig.json" },
		{ "path": "../server/tsconfig.json" }
	],
	"include": [
		"src"
	]
}